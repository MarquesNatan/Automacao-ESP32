/******************************************************************************/
#ifndef SCENES_DEFS_H
#define SCENES_DEFS_H
/******************************************************************************/
#include <stdint.h>
#include "../../command/include/command_defs.h"
/******************************************************************************/
#define SCENES_MAX_COMMANDS             5
/******************************************************************************/
typedef enum
{
    SEG = 0x00,
    TER = 0X01, 
    QUA = 0X02, 
    QUI = 0X03, 
    SEX = 0X04, 
    SAB = 0X05,
    DOM = 0X05
}scene_day;
/******************************************************************************/
typedef struct 
{
    uint8_t hour;
    uint8_t minute;
    uint8_t secound;
}scene_time_t;
/******************************************************************************/
typedef struct
{
    scene_day sceneDay;
    scene_time_t sceneTime;
    command_packet_t scenesCommands[SCENES_MAX_COMMANDS];
}scene_t;
/******************************************************************************/
#endif /* SCENES_DEFS_H */
/******************************************************************************/