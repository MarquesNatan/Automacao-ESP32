/******************************************************************************/
#ifndef SCENES_DEFS_H
#define SCENES_DEFS_H
/******************************************************************************/
#include <stdint.h>
#include "../../command/include/command_defs.h"
/******************************************************************************/
#define SCENES_MAX_COMMANDS             5
/******************************************************************************/
typedef enum
{
    SEG = 0x00,
    TER = 0X01, 
    QUA = 0X02, 
    QUI = 0X03, 
    SEX = 0X04, 
    SAB = 0X05,
    DOM = 0X06,
    ALL_DAYS = 0x07
}SCENE_DAY_ENUM;
/******************************************************************************/
typedef struct 
{
    uint8_t hour;
    uint8_t minute;
    uint8_t secound;
}scene_time_t;
/******************************************************************************/
typedef struct
{
    SCENE_DAY_ENUM sceneDay;
    scene_time_t sceneTime;
    command_packet_t sceneCommand;
}scene_t;
/******************************************************************************/
bool RegisterNewScene(uint8_t sceneParams[], unsigned int length);
uint8_t CharToByte(uint8_t buffer[], uint8_t offset, uint8_t length);
void GetCommandScene(command_packet_t *command, uint8_t params[]);
/******************************************************************************/
#endif /* SCENES_DEFS_H */
/******************************************************************************/